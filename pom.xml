<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>io.github.caffetteria</groupId>
	<artifactId>cappuccino</artifactId>

	<name>Cappuccino</name>
	<description>Guida all'uso dei principali IDE.</description>
	<version>0.1.0-SNAPSHOT</version>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>https://opensource.org/license/MIT</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java-version-compliance>8</java-version-compliance>
		<maven.compiler.source>${java-version-compliance}</maven.compiler.source>
		<maven.compiler.target>${java-version-compliance}</maven.compiler.target>
	</properties>	

	<organization>
		<url>https://github.com/caffetteria</url>
		<name>Caffetteria</name>
	</organization>
	
	<url>https://github.com/caffetteria</url>
	
	<scm>
		<connection>scm:git:git://github.com/caffetteria/cappuccino.git</connection>
		<developerConnection>scm:git:ssh://github.com/caffetteria/cappuccino.git</developerConnection>
		<url>https://github.com/caffetteria/cappuccino.git</url>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/caffetteria/cappuccino/issues</url>
	</issueManagement>

	<!--
		https://central.sonatype.org/publish/publish-maven/#distribution-management-and-authentication
		https://central.sonatype.org/publish/publish-portal-maven/#credentials
	-->
	<distributionManagement>
		<snapshotRepository>
			<id>central</id>
			<url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>central</id>
			<url>https://s01.oss.sonatype.org//service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>

	<developers>
		<developer>
			<name>Matteo Franci</name>
			<email>mttfranci@gmail.com</email>
			<url>https://github.com/mttfranci/</url>
			<timezone>+1</timezone>
			<organization>Caffetteria</organization>
			<organizationUrl>https://github.com/caffetteria/</organizationUrl>
			<roles>
				<role>IT Senior Consultant</role>
				<role>Senior Software Architect</role>
			</roles>
		</developer>
	</developers>

</project>
